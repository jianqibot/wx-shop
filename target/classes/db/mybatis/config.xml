<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias alias="User" type="com.github.jianqibot.wxshop.generate.User"/>
        <typeAlias alias="Shop" type="com.github.jianqibot.wxshop.generate.Shop"/>
        <typeAlias alias="ShoppingCartItem" type="com.github.jianqibot.wxshop.entity.ShoppingCartItem"/>
        <typeAlias alias="GoodsInShoppingCart" type="com.github.jianqibot.wxshop.entity.GoodsInShoppingCart"/>
    </typeAliases>
    <mappers>
        <mapper resource="db/mybatis/UserMapper.xml"/>
        <mapper resource="db/mybatis/GoodsMapper.xml"/>
        <mapper resource="db/mybatis/ShopMapper.xml"/>
        <mapper resource="db/mybatis/ShoppingCartMapper.xml"/>
        <mapper resource="db/mybatis/ShoppingCartCustomMapper.xml"/>
    </mappers>
</configuration>